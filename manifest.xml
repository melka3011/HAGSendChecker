<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="MailApp">
  <Id>abbecfbb-84ab-4c11-a31e-54912fe93f83</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Luka Melcic</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Pre-Send Confirmation Add-in" />
  <Description DefaultValue="Add-in that prompts for confirmation before sending an email." />
  <IconUrl DefaultValue="https://example.com/addinicon.png" />
  <HighResolutionIconUrl DefaultValue="https://example.com/addinicon-highres.png" />
  <SupportUrl DefaultValue="https://example.com/addinsupport" />
  <AppDomains>
    <AppDomain>https://example.com</AppDomain>
  </AppDomains>
  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>
  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="Mailbox" MinVersion="1.5" />
    </Sets>
  </Requirements>
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://example.com/PreSendConfirmation.html" />
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://example.com/PreSendConfirmation.html" />
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  <Permissions>ReadWriteMailbox</Permissions>
</OfficeApp>
